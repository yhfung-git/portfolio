          <ul>
            <li>Organization</li>
            <li>Self-motivated</li>
            <li>Adaptability</li>
            <li>Curiosity</li>
            <li>Patience</li>
            <li>Teamwork</li>
            <li>Stress Management</li>
          </ul>
        </div>
        <div class="col-12 col-md-6 col-lg-4 skills-content" id="languages">
          <h1 class="mt-3">languages</h1>
          <ul>
            <li>Chinese</li>
            <li>English</li>
            <li>French</li>
            <li>Malay</li>
            <li>Cantonese</li>
            <li>Hakka</li>
          </ul>
        </div>
        <div class="col-12 col-md-6 col-lg-4 skills-content" id="hobbies">
          <h1 class="mt-3">hobbies</h1>
          <ul>
            <li>Video Editing</li>
            <li>Photography</li>
            <li>Travel</li>
            <li>Theater</li>
          </ul>
        </div>
      </div>
    </div>
