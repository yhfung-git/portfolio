<%# Top %>
<div class="container">
  <div class="banner" id="top">
    <div class="container text-center">
      <h1 class="title-animation">Hello! I'm Yong How!</h1>
      <p><span data-controller="typed-js"></span></p>
      <%= link_to "Download", download_path, class: "btn btn-gradient draw", target: "_blank" %>
    </div>
    <div class="d-flex justify-content-center flex-column align-items-center">
    <img src="<%= asset_path("myAvatar.svg")%>" style="margin: 30px 0 30px 0;">
      <div class="mouse mt-4"></div>
      <p class="mouse-p">Scroll</p>
    </div>
  </div>

  <hr class="mt-5" style="color: #1BA098;">

  <%# About %>
  <div class="banner" style="padding-top: 0;">
    <h1 class="text-center title-animation my-5" id="About">About Me</h1>
    <%= render "shared/timeline" %>
    <div class="skills">
      <%= render "shared/hard_skills" %>
      <div class="row my-5">
        <div class="col-12 col-md-6 col-lg-4 skills-content" id="soft-skills">
          <h1 class="mt-5">soft skills</h1>
          <ul>
            <li>Organization</li>
            <li>Self-direction</li>
            <li>Adaptability</li>
            <li>Curiosity</li>
            <li>Patience</li>
            <li>Teamwork</li>
            <li>Stress Management</li>
          </ul>
        </div>
        <div class="col-12 col-md-6 col-lg-4 skills-content" id="languages">
          <h1 class="mt-5">languages</h1>
          <ul>
            <li>Chinese</li>
            <li>English</li>
            <li>French</li>
            <li>Malay</li>
            <li>Cantonese</li>
            <li>Hakka</li>
          </ul>
        </div>
        <div class="col-12 col-md-6 col-lg-4 skills-content" id="hobbies">
          <h1 class="mt-5">hobbies</h1>
          <ul>
            <li>Video Editing</li>
            <li>Photography</li>
            <li>Travel</li>
            <li>Theater</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <hr style="color: #1BA098; margin-top: 6em;">

  <%# Projects %>
  <div class="banner">
    <h1 class="text-center title-animation" id="Projects">Projects</h1>
    <div class="projects-container">
      <div>
        <%= link_to "https://francalaysian.com/", target: "_blank" do %>
          <img src="https://francalaysian.com/wp-content/uploads/2021/04/LG_Francalaysian.png" alt="Francalaysian" class="project-image">
        <% end %>
        <p>Francalaysian<br><small>2021</small></p>
      </div>
      <div>
        <%= link_to "https://www.speakitout.help/", target: "_blank" do %>
          <img src="https://www.speakitout.help/assets/nav_bar-3f593ad566affb8edb65bb9ee16f549e63745ac29c01fd491fa728c74f089249.png" alt="Speakitout" class="project-image">
        <% end %>
        <p>Spe@kitOut<br><small>2022</small></p>
      </div>
    </div>
  </div>
  <hr style="color: #1BA098;">
</div>
