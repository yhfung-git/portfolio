<%# Top %>
<div class="container">
  <div class="banner" id="top">
    <div class="container text-center">
      <h1 class="title-animation">Hello! <br class="br"> I'm Yong How!</h1>
      <p><span data-controller="typed-js"></span></p>
      <%= link_to "Download", download_path, class: "btn btn-gradient draw", target: "_blank" %>
    </div>
    <div class="d-flex justify-content-center flex-column align-items-center">
    <img src="<%= asset_path("myAvatar.svg")%>" style="margin: 30px 0 30px 0;">
      <div class="mouse mt-4"></div>
      <p class="mouse-p">Scroll</p>
    </div>
  </div>

  <hr class="mt-5" style="color: #1BA098;">

